for_window [app_id="steam"] inhibit_idle fullscreen
for_window [app_id="com.github.iwalton3.jellyfin-media-player"] inhibit_idle fullscreen
# for all steam games, move them to a workspace on mainmonitor and focus
for_window [class="steam_app*"] workspace 7, focus, inhibit_idle fullscreen

#No titlebars
